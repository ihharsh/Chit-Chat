<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp">



    <TextView
        android:id="@+id/text_mesaages"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:text="Hi i am harsh"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@drawable/receiver_shape_bg"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/reaction"
        android:visibility="invisible"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@id/text_mesaages"
        android:layout_toRightOf="@id/text_mesaages"
        android:src="@drawable/ic_fb_love" />

</RelativeLayout>