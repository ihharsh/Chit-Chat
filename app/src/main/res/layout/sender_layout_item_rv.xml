<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    
    <TextView
        android:id="@+id/text_mesaages"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:text="Hi I am harsh2"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/sender_shape_bg"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/reaction"
        android:visibility="invisible"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/text_mesaages"
        android:layout_marginTop="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_toLeftOf="@id/text_mesaages"
        android:src="@drawable/ic_fb_love" />

</RelativeLayout>